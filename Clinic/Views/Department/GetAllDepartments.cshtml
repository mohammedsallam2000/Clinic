@model DAL.Entities.Department
@{
    ViewBag.Title = "Get All Departement";
}

@inject BLL.Interface.IDepartmentRep Dep

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Department</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">All Departement</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- Horizontal Form -->

    <!-- /.card -->

    <div class="card card-info">
        <div class="card-header">
            <h3 class="card-title">All Departments</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                    <th  class="numbers">#</th>
                    <th >Department Name</th>
                    <th >Status</th>
                    <th >Actions</th>
                    </tr>
                </thead>
                <tbody>

                @{
                    int number = 0;
                }
                @foreach (var item in Dep.GetAll())
                {
                    <tr>
                        <th scope="row" class="numbers">
                            <p>@(number += 1)</p>
                        </th>
                        <td>
                            <p class="">@item.Name</p>
                        </td>

                        @*<th scope="col" class="w">
                    <p>20/10/22</p>
                    </th>*@
                        <th scope="col" class="w">
                            <p class="Status on">Active</p>
                        </th>
                        <td >
                            <a class="btn btn-info" title="Edit" asp-action="Edit" asp-controller="Department" asp-route-id="@item.DepartmentId">
                                   Edit
                                </a>
                        </td>
                    </tr>
                }
                 
                   
                 
                </tbody>
              @*  <tfoot>
                    <tr>
                      
                    </tr>
                </tfoot>*@
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
<!-- /.card -->
